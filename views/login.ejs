<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow&family=Caprasimo&family=PT+Sans:ital@1&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Ysabeau+SC:wght@500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
</head>
<body>
   <!-- header -->
   <%- include('include/header_common.ejs') -%>
   <!-- /header -->

   <!-- section -->
    <div class="container">
        <h1 class="text-center text-primary heading">Login</h1>
        </div>
        <div class="container">
        <div class="box1">
        <div class="row">
            <div class="col border" id="padding-none"><img src="/flat-lay-notebook-with-list-desk.jpg" class="sign-img"></div>
            <div class="col padding border">
              <% if(typeof message != undefined) { %>
                <div class="text-danger margin-bottom bg-light text-center">
                  <%= message %>
              </div>
              <% } %>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email / Username</label>
                      <input type="text" class="form-control"  aria-describedby="emailHelp" value="" name="text" placeholder="Email/Username" required>
                      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" value="" name="password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary mg-top">Login</button>
                  </form>
            </div>
        </div>
    </div>
    </div>
  </div>
  <!-- /section -->
    <!-- footer -->
    <footer class="footer bg-light text-center">
      <div class="container">
        <span>copywrite&copy;2023</span>
      </div>
    </footer>
</body>
</html>