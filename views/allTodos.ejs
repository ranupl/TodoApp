<!-- header -->
<%- include('include/header_admin.ejs') %>
<!-- /header -->

<!-- section -->
    <div class="container">
      <div class="text-center">
        <h1 class="text-primary heading">Todo Activities</h1>
      </div>
    </div>
    <div class="container">
      <div class="child-container">
        <div class="d-flex justify-content-between">
          <!-- Button trigger modal -->
<button type="button" class="btn btn-primary margin-bottom" data-toggle="modal" data-target="#exampleModalCenter">
  Todo Create
</button>
<!-- The search form -->
<form class="example" action="/searchTask" method="GET">
  <input type="text" placeholder="Search.." name="searchText">
  <div class="dropdown">
    <button type="button" class="btn btn-primary" data-toggle="dropdown">
      <ion-icon name="caret-down-outline" class="icon-size"></ion-icon>
    </button>
    <div class="dropdown-menu" id="margin-width">
      <a class="dropdown-item" href="#">10</a>
      <a class="dropdown-item" href="#">20</a>
      <a class="dropdown-item" href="#">50</a>
    </div>
  </div>
</form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="container">
        <div class="text-center">
          <h1 class="heading text-primary">Create Todo</h1>
        </div>
      </div>
      <div class="outer-container">
        <div class="inner-container">
          <div class="container">
            <form action="/todo" method="POST">
              <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleFormControlInput1"
                  value=""
                  name="title"
                  placeholder="Title"
                />
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Discription</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleFormControlInput1"
                  value=""
                  name="discription"
                  placeholder="Description"
                />
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Priority</label>
                <select
                  class="form-control"
                  id="exampleFormControlSelect1"
                  value=""
                  name="priority"
                >
                  <option>High</option>
                  <option>Medium</option>
                  <option>Low</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Status</label>
                <select
                  class="form-control"
                  id="exampleFormControlSelect1"
                  value=""
                  name="status"
                >
                  <option>Pending</option>
                  <option>Progress</option>
                  <option>Done</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Username :- </label>
                <select name="userid">
                  <% for (let i = 0; i < users.length; i++) { %>
                    <option value="<%= users[i].username %>"><%= users[i].username %></user></option>
                  <% } %>
                  <option><%= adminUser %></option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">S.No.</th>
              <th scope="col">userId</th>
              <th scope="col">Title</th>
              <th scope="col">Discription</th>
              <th scope="col">Priority</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i<tasks.length; i++) { %>
            <tr>
              <td scope="col"><%= i+1 %></td>
              <td scope="col"><%= tasks[i].userid %></td>
              <td scope="col"><%= tasks[i].title %></td>
              <td scope="col"><%= tasks[i].discription %></td>
              <td scope="col"><%= tasks[i].priority %></td>
              <td scope="col"><%= tasks[i].status %></td>
              <td>
                <div>
                  <a href="/todo/edit/<%= tasks[i].id %>"><ion-icon name="pencil" class="color-pencil"></ion-icon></a>
                  <a href="/todo/delete/<%= tasks[i].id %>"><ion-icon name="trash" class="color-trash"></ion-icon></a>
                </div>
              </td>
            </tr>
            <% }; %>
          </tbody>
        </table>
      </div>
    </div>
<!-- /section -->

<!-- footer -->
<%- include('include/footer.ejs') -%>
<!-- /footer -->

