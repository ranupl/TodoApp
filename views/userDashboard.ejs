<!-- header -->
<%- include('include/header_user.ejs') %>
<!-- /header -->

<!-- section -->
<div class="container">
  <div class="text-center">
      <h1 class="text-primary heading">Todo Activities</h1>
  </div>
</div>

<div class="container">
  <div class="child-container">
      <div class="d-flex justify-content-between">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary margin-bottom" data-toggle="modal" data-target="#exampleModalCenter">
      Create Task
      </button>
      <div class="d-flex">
      <!-- The search form -->
      <form class="example" action="/searchTask" method="GET">
        <input type="text" placeholder="Search By Title" name="searchText">
     </form>
     <form>
    <div class="dropdown">
      <button type="button" class="btn btn-primary" id="btn-size" data-toggle="dropdown">
      <ion-icon name="caret-down-outline" class="icon-size"></ion-icon>
      </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">10</a>
      <a class="dropdown-item" href="#">20</a>
      <a class="dropdown-item" href="#">50</a>
    </div>
</div>
  </form>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <div class="container">
      <div class="text-center">
        <h1 class="heading text-primary">Create Todo</h1>
      </div>
    </div>
    <div class="outer-container">
      <div class="inner-container">
        <div class="container">
          <form action="/todo" method="POST">
            <div class="form-group">
              <label for="exampleFormControlInput1">Title</label>
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                value=""
                name="title"
                placeholder="Title"
              />
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Discription</label>
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                value=""
                name="discription"
                placeholder="Description"
              />
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Priority</label>
              <select
                class="form-control"
                id="exampleFormControlSelect1"
                value=""
                name="priority"
              >
                <option>High</option>
                <option>Medium</option>
                <option>Low</option>
              </select>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Status</label>
              <select
                class="form-control"
                id="exampleFormControlSelect1"
                value=""
                name="status"
              >
                <option>Pending</option>
                <option>Progress</option>
                <option>Done</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
<!-- /modal -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">S.No.</th>
              <th scope="col">Title</th>
              <th scope="col">Discription</th>
              <th scope="col">Priority</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(tasks.length > 0) { %>
              <% for(let i=0; i<tasks.length; i++) {  %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= tasks[i].title %></td>
                  <td><%= tasks[i].discription %></td>
                  <td><%= tasks[i].priority %></td>
                  <td><%= tasks[i].status %></td>
                  <td>
                    <div>
                      <!-- <a href="/todo/edit/<%= tasks[i].id %>"><ion-icon name="pencil" class="color-pencil"></ion-icon></a> -->
<!-- Button trigger modal -->
<!-- Modal -->

<button type="button" class="btn btn-white" data-toggle="modal" data-target="#editModal">
<a href="/todo/edit/<%= tasks[i].id %>"><ion-icon name="pencil" class="color-pencil"></ion-icon></a>
</button>

<%- include('todoEditModel.ejs') -%>




                      <!-- checking -->
                      <a href="/todo/delete/<%= tasks[i].id %>"><ion-icon name="trash" class="color-trash"></ion-icon></a>
                    </div>
                  </td>
                </tr>
             <% } %>
           <% } %>
          </tbody>
        </table>
      </div>
    </div>
<!-- /section -->

<!-- pagging -->
<div class="container text-center">
<% if (totalPages > 1) { %>
  <div>
    <% if (page > 1) { %>
      <a href="/todo?page=<%= page - 1 %>">Previous</a>
    <% } %>

    <% if (page < totalPages) { %>
      <a href="/todo?page=<%= page + 1 %>">Next</a>
    <% } %>
  </div>
<% } %>
</div>


<!-- footer -->
<%- include('include/footer.ejs') -%>
