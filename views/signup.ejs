<!-- header -->
<%- include('include/header_common.ejs') -%>
<!-- /header -->

<!-- section -->
      <div class="container">
      <h1 class="text-center text-primary heading">Sign Up</h1>
      </div>
      <div class="container">
      <div class="box1">
        <div class="row">
          <div class="col padding border">
            <% if(typeof message != undefined) { %>
              <div class="text-center text-danger margin-bottom bg-light ">
                <%= message %>
            </div>
            <% } %>
            <form action="/users" method="POST" onsubmit="return validateForm()">
              <div class="form-group">
                <label for="fname">First Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="fname"
                  value=""
                  name="firstname"
                  placeholder="First Name"
                />
                <span id="fnameError" style="color: red;"></span>
              </div>

              <div class="form-group">
                <label for="lname">Last Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="lname"
                  value=""
                  name="lastname"
                  placeholder="Last Name"
                />
                <span id="lnameError" style="color: red;"></span>
              </div>
              <div class="form-group">
                <label for="email">Email address</label>
                <input
                  type="text"
                  class="form-control"
                  id="emailAdd"
                  aria-describedby="emailHelp"
                  value=""
                  name="email"
                  placeholder="Enter email"
                />
                <span id="emailMsg" style="color: red;"></span>
                <small id="emailHelp" class="form-text text-muted"
                  >We'll never share your email with anyone else.</small
                >
              </div>
              <div class="form-group">
                <label for="username">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  value=""
                  name="username"
                  placeholder="Username"  
                />
                <span id="msg" style="color: red;"></span>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  value=""
                  name="password"
                  placeholder="Password"
                />
                <span id="passMsg" style="color: red;"></span>
              </div>
              <button type="submit" class="btn btn-primary mg-top">
                Sign Up
              </button>
            </form>
          </div>
          <div class="col border">
            <img src="/draw2.webp" class="sign-img" />
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- /section -->

<!-- script -->



<!-- footer -->
<%- include('include/footer.ejs') -%>
<!-- /footer -->
  
