<!-- header -->
<%- include('include/header_common.ejs') -%>
<!-- /header -->

<!-- section -->
<div class="container">
    <h1 class="text-center text-primary heading"> Admin Login</h1>
</div>
<div class="text-center text-danger">
  <% if(typeof message != undefined) { %>
    <p><%= message %></p>
  <% } %>
</div>
<div class="container">
    <div class="box1">
        <div class="row">
            <div class="col border" id="padding-none"><img src="/8810413.jpg" class="sign-img"></div>
            <div class="col padding border">
                <form action="/admin/login" method="POST">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email / Username</label>
                      <input type="text" class="form-control" aria-describedby="emailHelp" value="" name="text" placeholder="Email/Username">
                      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" value="" name="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary mg-top">Login</button>
                  </form>
            </div>
        </div>
    </div>
  </div>
</div>
<!-- section -->

<!-- footer -->
<%- include('include/footer.ejs') -%>
<!-- /footer -->
